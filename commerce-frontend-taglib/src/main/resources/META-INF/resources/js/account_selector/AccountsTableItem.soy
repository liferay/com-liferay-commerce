{namespace AccountsTableItem}

/**
 * This renders the component's whole content.
 */
{template .render}
	{@param thumbnail: string }
	{@param name: string }
	{@param? query: string }

	<span
		class="commerce-account-list__item u-hoverable"
		data-onclick="_handleItemClick"
	>
		<img alt="{$name}" src="{$thumbnail}">
		{call AutocompleteItem.render}
			{param text: $name /}
			{param query: $query /}
		{/call}
	</span>
{/template}