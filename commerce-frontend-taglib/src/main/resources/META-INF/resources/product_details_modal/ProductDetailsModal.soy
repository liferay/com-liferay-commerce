{namespace ProductDetailsModal}

{template .render}

	{@param availability: string}
	{@param sku: string}
	{@param name: string}
	{@param pictureUrl: string}
	{@param detailsLink: string}

	{@param? categories: list<[
		name: string,
		link: string
	]>}
	{@param? description: string}
	{@param? addToOrderLink: string}
	{@param? settings: [
		minQuantity: number
	]}

	{@param? _modalVisible: bool}

	{@param? _handleCloseModal: any}

	{let $availabilityDotClasses kind="text"}
		d-inline-block commerce-dot commerce-dot--
		{switch $availability}
			{case 'inStock'}
				good
			{case 'available'}
				neutral
			{default}
				bad
		{/switch}
	{/let}

	{let $body kind="html"}
		<div class="commerce-modal">
			<div class="commerce-modal__header">
				/*
					<div class="commerce-modal__navigation">
						<button class="modal-navigation__prev">
							<svg class="commerce-icon" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
								<rect fill="currentColor" height="90" rx="10" ry="10" width="90" x="5" y="5"></rect>
							</svg>
						</button>

						<button class="modal-navigation__next">
							<svg class="commerce-icon" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
								<rect fill="currentColor" height="90" rx="10" ry="10" width="90" x="5" y="5"></rect>
							</svg>
						</button>
					</div>
				*/
				<button
					class="commerce-modal__close"
					data-onclick="{$_handleCloseModal}"
				>
					<svg class="commerce-icon" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
						<rect fill="currentColor" height="90" rx="10" ry="10" width="90" x="5" y="5"></rect>
					</svg>
				</button>
			</div>

			<div class="commerce-product-details-modal__picture">
				<img alt="{$name}" src="{$pictureUrl}" />
			</div>

			<div class="commerce-product-details-modal__availability">
				<div class="{$availabilityDotClasses}"></div>
			</div>

			<p class="commerce-product-details-modal__sku">{$sku}</p>
			{if isNonnull($settings) and isNonnull($settings.minQuantity)}
				<span class="commerce-product-details-modal__min-quantity">
					Minimum quantity per order
					<span class="commerce-product-details-modal__min-quantity__value">
						{isNonnull($settings.minQuantity)}
					</span>
				</span>
			{/if}
			<h3 class="commerce-product-details-modal__name">
				{$name}
			</h3>
			{if isNonnull($categories) and length($categories) > 0}
				<p class="commerce-product-details-modal__categories">
					{foreach $category in $categories}
						{if index($category) != 0}
							,{sp}
						{/if}
						<a href="{$category.link}">
							{$category.name}
						</a>
					{/foreach}
				</p>
			{/if}
			{if isNonnull($description)}
				<p class="commerce-product-details-modal__description">
					{$description}
				</p>
			{/if}
			<a
				class="commerce-product-details-modal__view-details"
				href="{$detailsLink}"
			>
				View product details
			</a>
			{if isNonnull($addToOrderLink)}
				<div class="commerce-product-details-modal__add-to-order">
					<a class="commerce-button" href="{$addToOrderLink}">
						Add to order
					</a>
				</div>
			{/if}
		</div>
	{/let}

	{call ClayModal.render}
		{param body: $body /}
		{param visible: $_modalVisible /}
		{param ref: 'modal' /}
	{/call}

{/template}