{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"paths": {
			"*": [
				"node_modules/*"
			]
		},
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"typeRoots": [
			"node_modules/@types",
			"@types"
		]
	},
	"exclude": [
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	],
	"include": [
		"src/**/*"
	]
}