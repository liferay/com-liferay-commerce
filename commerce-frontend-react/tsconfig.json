{
	"compilerOptions": {
		"strict": true,
		"jsx": "react",
		"target": "esnext",
		"module": "esnext",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"sourceMap": true,
		"allowJs": true,
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"*": ["node_modules/*"]
		},
		"typeRoots": [
            "node_modules/@types",
            "@types"
        ]
	},
	"include": ["src/**/*"],
	"exclude": ["babel.config.js", "metro.config.js", "jest.config.js"]
}