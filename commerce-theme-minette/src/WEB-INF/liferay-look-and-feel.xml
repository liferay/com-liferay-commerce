<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.1.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_1_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.1.0+</version>
	</compatibility>
	<theme id="commerce-theme-minette" name="Minette">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="demo-mode" type="checkbox" value="false" />
			<setting configurable="false" key="show-maximize-minimize-application-links" type="checkbox" value="false" />
			<setting configurable="false" key="show-site-name-default" value="false" />
		</settings>
		<layout-templates>
			<custom>
				<layout-template id="commerce_cart_1_2_columns" name="Commerce Cart 1-2 Columns">
					<template-path>/layouttpl/commerce/commerce_cart_1_2_columns.tpl</template-path>
					<thumbnail-path>/layouttpl/commerce/commerce_cart_1_2_columns.png</thumbnail-path>
				</layout-template>
				<layout-template id="commerce_catalog_1_2_1_columns" name="Commerce Catalog 1-2-1 Columns">
					<template-path>/layouttpl/commerce/commerce_catalog_1_2_1_columns.tpl</template-path>
					<thumbnail-path>/layouttpl/commerce/commerce_catalog_1_2_1_columns.png</thumbnail-path>
				</layout-template>
				<layout-template id="commerce_max_width_1_column" name="Commerce Max Width 1 Column">
					<template-path>/layouttpl/commerce/commerce_max_width_1_column.tpl</template-path>
					<thumbnail-path>/layouttpl/commerce/commerce_max_width_1_column.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
		<portlet-decorator id="barebone" name="Barebone">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="card" name="Card">
			<portlet-decorator-css-class>portlet-card</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="card-inverse" name="Card inverse">
			<portlet-decorator-css-class>portlet-card-inverse</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>